<h1>Edeting Book</h1>

<%= form_with model: @book, url: book_path(@book.id), method: :patch, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  
 <div><%= f.submit 'Update Book' %></div> 
  <% end %>
  <%= link_to "show", book_path(@book.id) %>
  <%= link_to "back", books_path() %>
