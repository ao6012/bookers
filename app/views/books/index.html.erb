<h1>Books</h1>

<p>タイトル</p>
 <% @books.each do |book| %>
 <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th> </th> 
    </tr>
  </thead> 
  <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
      </tr>
  </tbody>
 </table>
<% end %>

<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
  
 <br>
  <%= f.submit 'Create Book' %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  
<% end %>
